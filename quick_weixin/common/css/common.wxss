.doc-page{
  display: flex;
  flex: 1;
  flex-direction: column;
  
}

.page-title-wrap {
  padding-top: 50rpx;
  padding-bottom: 80rpx;
  justify-content: center;
}
.page-title{
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  border-color: #bbbbbb;
  color: #bbbbbb;
  border-bottom-width: 2rpx;
}

.item-container {
  margin-bottom: 50rpx;
  margin-right: 60rpx;
  margin-left: 60rpx;
  flex-direction: column;
}
.item-content {
  flex-direction: column;
  background-color: #ffffff;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.btn {
  height: 80rpx;
  text-align: center;
  border-radius: 5rpx;
  margin-right: 60rpx;
  margin-left: 60rpx;
  margin-bottom: 50rpx;
  color: #ffffff;
  font-size: 30rpx;
  background-color: #0faeff;
}

.text-center {
  justify-content: center;
}
.center{
  align-items: center;
}
/* position */
.m-bottom-lg {
  margin-bottom: 40rpx;
}
.m-bottom-md {
  margin-bottom: 20rpx;
}
.m-bottom-sm {
  margin-bottom: 10rpx;
}
.m-bottom-xs {
  margin-bottom: 5rpx;
}

.vertical {
  flex-direction: column;
}
